include "grm.grm"
// The extension of the Txl grammar
keys 
 ... 'ordered 'by 'ignored
end keys 
define typeSpec
 [opt typeModifier] 
 [typeid] 
 [opt typeRepeater] 
 [opt orderedBy] 
 [opt ignored] 
end define
define ignored
 'ignored
end define
define orderedBy
 'ordered [opt byField]
end define
define byField
 'by [id]
end define
