#!/bin/bash
p=$(dirname $0)
if [ "$1" == "-comment" ]; then
  cc=cc
  shift
else
  cc=c
fi
type=${1/*.}
case $type in
java) language=api_clone_java ;;
v) language=verilog2 ;;
xml) language=xml-mct ;;
*) language=$type ;;
esac
mct=$p/../bin.`uname -s -m | sed 's/ /_/'`/"$language"$cc
if [ "$#" == "1" ]; then
	$mct $opt -q $1
elif [ "$#" == "2" ]; then
#	$mct $opt -attr -q $1 -diff $2 >& t.t
	$mct $opt -q $1 -diff $2 >& t.t
	grep -v TXL091 t.t
	rm -f t.t
else
	echo usage: mct program [program_to_compare]
fi
