include "Q7/q7.grm"
keys 
  'As 'a 'we 'want 'to' 'so 'that
end keys

define role
 'As [opt 'a] [name] ', 
end define

define action
   'I 'want 'to [name] 
 | 'we 'want 'to [name] 
end define

define goal
 'so 'that [name] 
end define

define story
  [opt role] [action] [opt goal] '. [opt newline] [NL]
end define
