<?xml version="1.0" encoding="UTF-8"?>
<finite-state-machine xmlns="http://ofsm.sourceforge.net"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:schemaLocation="http://ofsm.sourceforge.net ofsm.xsd">
 <definitions>
     <states>
         <state>
             <name>Success</name>             
         </state>
         <state>
             <name>Fail</name>             
         </state>         
     </states>
     <events>
         <event>
             <name>TestEvent</name>
	     <className>org.ofsm.impl.Event</className>
         </event>
         <event>
             <name>TestEvent2</name>
         </event>         
     </events>
 </definitions>
 <initial-state>Success</initial-state>
 <transitions>
     <transition>
         <when-event>TestEvent</when-event>
         <from-state>Success</from-state>
         <to-state>Fail</to-state>
     </transition>
     <transition>
         <when-event>TestEvent</when-event>
         <from-state>Fail</from-state>
         <to-state>Fail</to-state>
     </transition>     
     <transition>
         <when-event>TestEvent2</when-event>
         <from-state>Success</from-state>
         <to-state>Success</to-state>
     </transition>
     <transition>
         <when-event>TestEvent2</when-event>
         <from-state>Fail</from-state>
         <to-state>Success</to-state>
     </transition>          
 </transitions>
</finite-state-machine>
