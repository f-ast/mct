<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<finite-state-machine xmlns="http://ofsm.sourceforge.net">
    <definitions>
        <states>
            <state>
                <name>Awaiting</name>
            </state>
            <state>
                <name>Processing</name>
            </state>
            <state>
                <name>Rejected</name>
            </state>
            <state>
                <name>Accepted</name>
            </state>
        </states>
        <events>
            <event>
                <name>ReceivedRequest</name>
            </event>
            <event>
                <name>ChargingRequest</name>
            </event>
            <event>
                <name>CancelRequest</name>
            </event>
        </events>
    </definitions>
    <initial-state>Awaiting</initial-state>
    <transitions>
        <transition>
            <when-event>ReceivedRequest</when-event>
            <from-state>Awaiting</from-state>
            <to-state>Processing</to-state>
        </transition>
        <transition>
            <when-event>CancelRequest</when-event>
            <from-state>Processing</from-state>
            <to-state>Rejected</to-state>
        </transition>
        <transition>
            <when-event>ChargingRequest</when-event>
            <from-state>Processing</from-state>
            <to-state>Accepted</to-state>
        </transition>
    </transitions>
</finite-state-machine>
