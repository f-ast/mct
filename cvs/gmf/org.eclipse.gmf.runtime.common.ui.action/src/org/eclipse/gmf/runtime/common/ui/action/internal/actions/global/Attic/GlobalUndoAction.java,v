    protected void doRun(IProgressMonitor progressMonitor) {
    	try {
    		// RATLC00138974 - prevents the user trying to undo while undo is in progress.
    		setEnabled(false);
    		getCommandManager().undo();
    	} finally {
    		refresh();
    	}
