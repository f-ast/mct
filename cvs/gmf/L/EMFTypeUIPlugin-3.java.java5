package org.eclipse.gmf.runtime.emf.type.ui.internal;

import java.util.MissingResourceException;

import org.eclipse.gmf.runtime.common.core.l10n.AbstractResourceManager;

import org.eclipse.gmf.runtime.common.ui.plugin.XToolsUIPlugin;

import org.eclipse.gmf.runtime.emf.type.ui.internal.l10n.ResourceManager;

public class EMFTypeUIPlugin extends XToolsUIPlugin {
    private static EMFTypeUIPlugin plugin;

    public static String getResourceString (String key) {
        AbstractResourceManager resourceManager = EMFTypeUIPlugin.getDefault ().getResourceManager ();
        try {
            return (resourceManager != null) ? resourceManager.getString (key) : key;
        } catch (MissingResourceException e) {
            return key;
        }
    }

    public EMFTypeUIPlugin () {
        super ();
        plugin = this;
    }

    public static EMFTypeUIPlugin getDefault () {
        return plugin;
    }

    public AbstractResourceManager getResourceManager () {
        return ResourceManager.getInstance ();
    }

}

