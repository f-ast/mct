        String label = ((ParentAssignedViewmap) object).getGetterName ();
        return label == null || label.length () == 0 ? getString ("_UI_ParentAssignedViewmap_type") : getString ("_UI_ParentAssignedViewmap_type") + " " + label;
    }

    @Override
    public void notifyChanged (Notification notification) {
        updateChildren (notification);
        switch (notification.getFeatureID (ParentAssignedViewmap.class)) {
