package org.eclipse.gmf.runtime.common.ui.services.elementselection;

import java.util.List;

import org.eclipse.core.runtime.IAdaptable;

public class AbstractElementSelectionInput implements IElementSelectionInput {
    private ElementSelectionScope scope;
    private List types;
    private IAdaptable context;
    private String filter;

    public AbstractElementSelectionInput (List types, IAdaptable context, ElementSelectionScope scope, String filter) {
        super ();
        this.types = types;
        this.context = context;
        this.scope = scope;
        this.filter = filter;
    }

    public ElementSelectionScope getScope () {
        return scope;
    }

    public List getTypes () {
        return types;
    }

    public IAdaptable getContext () {
        return context;
    }

    public String getFilter () {
        return filter;
    }

    public void setContext (IAdaptable context) {
        this.context = context;
    }

    public void setFilter (String filter) {
        this.filter = filter;
    }

    public void setScope (ElementSelectionScope scope) {
        this.scope = scope;
    }

    public void setTypes (List types) {
        this.types = types;
    }

}

