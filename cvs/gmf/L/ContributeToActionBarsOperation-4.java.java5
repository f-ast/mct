package org.eclipse.gmf.runtime.common.ui.services.action.internal.contributionitem;

import org.eclipse.ui.IActionBars;

import org.eclipse.gmf.runtime.common.core.service.IOperation;

import org.eclipse.gmf.runtime.common.core.service.IProvider;

import org.eclipse.gmf.runtime.common.ui.services.action.contributionitem.ContributionItemService;

import org.eclipse.gmf.runtime.common.ui.util.IWorkbenchPartDescriptor;

public class ContributeToActionBarsOperation implements IOperation {
    private final IActionBars actionBars;
    private final IWorkbenchPartDescriptor workbenchPartDescriptor;

    public ContributeToActionBarsOperation (IActionBars actionBars, IWorkbenchPartDescriptor workbenchPartDescriptor) {
        assert null != actionBars : "actionBars cannot be null";
        assert null != workbenchPartDescriptor : "workbenchPartDescriptor cannot be null";
        this.actionBars = actionBars;
        this.workbenchPartDescriptor = workbenchPartDescriptor;
    }

    public IActionBars getActionBars () {
        return actionBars;
    }

    public IWorkbenchPartDescriptor getWorkbenchPartDescriptor () {
        return workbenchPartDescriptor;
    }

    public Object execute (IProvider provider) {
        ((IContributionItemProvider) provider).contributeToActionBars (getActionBars (), getWorkbenchPartDescriptor ());
        return null;
    }

}

