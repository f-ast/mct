package org.eclipse.gmf.internal.common.codegen;

public abstract class TextMerger {
    protected static final String TAG = "gmf generator persistent region";
    protected static final String BEGIN_TAG = TAG + " begin";
    protected static final String END_TAG = TAG + " end";
    private static final TextMerger PRP = new PropertiesTextMerger ();
    private static final TextMerger XML = new TaggedTextMerger ("<!-- " + BEGIN_TAG + " -->", "<!-- " + END_TAG + " -->");

    public static TextMerger getForFile (String name) {
        if (name.endsWith (".properties")) {
            return PRP;
        }
        if (name.endsWith (".xml")) {
            return XML;
        }
        return null;
    }

    public abstract String process (String oldText, String newText);

}

