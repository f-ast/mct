package org.eclipse.gmf.runtime.diagram.ui.actions.internal;

import org.eclipse.gmf.runtime.common.ui.action.ActionMenuManager;

import org.eclipse.gmf.runtime.diagram.ui.actions.internal.l10n.DiagramActionsResourceManager;

import org.eclipse.gmf.runtime.diagram.ui.internal.requests.ActionIds;

import org.eclipse.jface.action.Action;

import org.eclipse.jface.resource.ImageDescriptor;

public class CompartmentMenuManager extends ActionMenuManager {
    private static class CompartmentMenuAction extends Action {

        public CompartmentMenuAction () {
            setText (DiagramActionsResourceManager.getI18NString ("ShowResizableCompartmentActionMenu.ShowResizeableCompartmentsText"));
            setToolTipText (DiagramActionsResourceManager.getI18NString ("ShowResizableCompartmentActionMenu.ShowResizeableCompartmentsTooltip"));
            ImageDescriptor enabledImage = DiagramActionsResourceManager.getInstance ().getImageDescriptor (DiagramActionsResourceManager.IMAGE_SHOW_HIDE_COMPARTMENTS_GROUP);
            setImageDescriptor (enabledImage);
            setDisabledImageDescriptor (DiagramActionsResourceManager.getInstance ().getImageDescriptor (DiagramActionsResourceManager.IMAGE_SHOW_HIDE_COMPARTMENTS_GROUP_DISABLED));
            setHoverImageDescriptor (enabledImage);
        }

    }

    public CompartmentMenuManager () {
        super (ActionIds.MENU_COMPARTMENT, new CompartmentMenuAction (), true);
    }

}

