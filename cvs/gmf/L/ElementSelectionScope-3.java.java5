package org.eclipse.gmf.runtime.common.ui.services.elementselection;

public class ElementSelectionScope {
    private int scope;

    public ElementSelectionScope () {
        this (0);
    }

    private ElementSelectionScope (int scope) {
        this.scope = scope;
    }

    public static final ElementSelectionScope VISIBLE = new ElementSelectionScope (1 << 1);
    public static final ElementSelectionScope GLOBAL = new ElementSelectionScope (1 << 2);
    public static final ElementSelectionScope BINARIES = new ElementSelectionScope (1 << 3);
    public static final ElementSelectionScope SOURCES = new ElementSelectionScope (1 << 4);

    public int intValue () {
        return scope;
    }

    public static boolean isSet (int scope, ElementSelectionScope option) {
        if ((scope & option.scope) != 0) return true;

        return false;
    }

    public void set (ElementSelectionScope option) {
        scope = scope | option.scope;
    }

}

